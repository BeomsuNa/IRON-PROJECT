{
	"servers": {
		"perplexity": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@perplexity-ai/mcp-server"
			],
			"env": {
				"PERPLEXITY_API_KEY": "${NEXT_PUBLIC_PERPLEXITY_API_KEY}"
			}
		}
	},
	"inputs": [
		{
			"type": "promptString",
			"id": "perplexity-key",
			"description": "Perplexity API Key",
			"password": true
		}
	]
}